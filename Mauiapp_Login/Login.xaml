<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mauiapp_Login.Login"
             Title="Login">
    <VerticalStackLayout VerticalOptions="Center"
                         Spacing="10"
                         Padding="8">
        <Label FontSize="30" Text="Login" HorizontalOptions="Center" />
        <Label Text="Nome:"/>
        <Entry x:Name="txt_nome"/>
        <Entry x:Name="txt_senha" IsPassword="True"/>
        <Button BorderWidth="0" HorizontalOptions="End" Text="Mostrar senha" MaximumWidthRequest="100" MinimumHeightRequest="10" FontSize="10" Background="Transparent" TextColor="White" Clicked="Button_Clicked"/>
        <Button Text="Entrar" Clicked="Button_Clicked_1"/>
    </VerticalStackLayout>
</ContentPage>